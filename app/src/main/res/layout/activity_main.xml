<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="364dp"
        android:id="@+id/gridView"
        android:numColumns="auto_fit"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"

        android:columnWidth="110dp"


        android:stretchMode="spacingWidthUniform"


        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView"
        android:background="#f1f1f1"
        android:layout_alignTop="@+id/speak"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/speak"
        android:layout_alignBottom="@+id/button3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speak"
        android:id="@+id/speak"
        android:onClick="sayWord"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button2" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="N"
        android:id="@+id/button2"
        android:layout_below="@+id/speak"
        android:layout_alignParentEnd="true" />



    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="P"
        android:id="@+id/button3"
        android:layout_below="@+id/speak"
        android:layout_alignEnd="@+id/speak" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridView2"
        android:layout_alignTop="@+id/gridView"
        android:layout_alignParentEnd="true"
        android:background="#a28787"
        android:columnWidth="110dp"
        android:horizontalSpacing="10dp"
        android:numColumns="auto_fit"
        android:stretchMode="spacingWidthUniform" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;"
        android:id="@+id/button4"

        android:layout_above="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:onClick="deleteWord" />
</RelativeLayout>
